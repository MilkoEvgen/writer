<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-post-label" author="Eugene_Milko">
        <createTable tableName="post_label">
            <column name="post_id" type="int">
                <constraints deleteCascade="true" foreignKeyName="fk_post_id" references="posts(id)" primaryKey="true"/>
            </column>
            <column name="label_id" type="int">
                <constraints deleteCascade="true" foreignKeyName="fk_label_id" references="labels(id)" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>